<div class="container">
  <div class="footer-bottom-margin bets-container text-center mt-2">
      <div class="d-flex flex-column align-items-center">
        <h3 class="custom-bg-primary text-white p-1 mb-3 mt-2 mx-auto text-center"><strong>My Active Bets</strong></h3>
      </div >
    <% @bets.each do |bet| %>
        <div class="mt-4">
          <%= render "bet_card", bet: bet %>
        </div>
      <% end %>
  <div class="mt-3 mb-2">
      <h3 class="custom-bg-info text-black p-1 mx-auto"><strong>Past Bets</strong></h3>
    </div>
  </div>
</div>
