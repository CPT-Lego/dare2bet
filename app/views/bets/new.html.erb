<%= render "shared/navbar" %>
<div class="container d-flex justify-content-center vh-50 mt-4 ">
  <%= simple_form_for(@bet) do |f| %>
    <%= f.input :name %>
    <%= f.input :stake %>
    <%= f.input :location %>
    <%= f.input :end_time, html5: true %>
    <%= f.input :privacy, collection: ["public", "private"], selected: "private" %>
    <%= f.input :status, collection: ["pending", "active", "finished"], selected: "pending" %>
    <%= f.association :tag %>
    <%= f.input :outcome, collection: ["ongoing", "win", "loss", "tie"], selected: "ongoing"%>
    <%= f.submit %>
  <% end %>
</div>
