<div class="container">
  <div class="align-items-center justify-content-center text-center mt-3 footer-bottom-margin">
    <div class="col bet-card text-start  ">
      <%= render "bet_card", bet: @bet %>
        <div class="border border-1 border-top-0 inner-border rounded-bottom-4">

          <p><strong><i class="fa-solid fa-sack-dollar"></i></strong> <%= @bet.stake %></p>
          <p><strong><i class="fa-solid fa-location-dot"></i></strong> <%= @bet.location.capitalize %></p>
          <p><strong><i class="fa-solid fa-lock"></i></strong> <%= @bet.privacy.capitalize %></p>
          <p><strong><i class="fa-regular fa-square-check"></i></strong> <%= @bet.status.capitalize %></p>
          <p><strong><i class="fa-regular fa-calendar-plus"></i></strong> <%= @bet.created_at %></p>
          <p><strong><i class="fa-regular fa-calendar-check"></i></strong> <%= @bet.end_time %></p>

          <% if @bet.winner %>
            <p><strong>Winner: </strong><%= @bet.winner.name.capitalize %></p>
          <% end %>
        </div>
    </div>


      <% if current_user == @bet.user || current_user == @bet.opponent %>
        <div class="d-flex gap-4 justify-content-between m-3 mt-5 " >
          <%= link_to bet_resolve_path(@bet), class: "m-2 btn  btn-info-1 flex-grow-1 #{ @bet.winner ? 'disabled' : ' ' }"  do %>
              <i class="fa-solid fa-trophy"></i> Resolve
          <% end %>

          <%= link_to bet_path(@bet), class: "m-2 btn  btn-hover-light-1 flex-grow-1", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
              <i class="fa-regular fa-trash-can"></i> Delete
          <% end %>
        </div>
      <% end %>

  </div>
</div>
