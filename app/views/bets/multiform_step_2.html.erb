<div class="page-wrapper" style="max-width: 400px; margin-top: 100px">
<div class=" container container-form align-middle  justify-content-center footer-bottom-margin w-100">
 <%= simple_form_for(@bet, step_2: true) do |f| %>
    <div class="text-center mt-4 mb-4">
      <h1 class="text-underline font-weight-bold"> STEP-2 </h1>
    </div>
    <div class="mt-2 mb-5 ">
      <div class="progress">
        <div class="progress-bar bg-secondary progress-bar-striped progress-bar-animated" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>


   <%= f.input :stake %>
    <%= f.input :location %>
    <%= f.input :end_time, html5: true %>
    <input  type="hidden" name="step_2" value="true" >

    <div class="text-center mt-5">
      <%= f.submit "Go to next step", class: "btn btn-violet" %>
    </div>
  <% end %>
</div>
</div>


