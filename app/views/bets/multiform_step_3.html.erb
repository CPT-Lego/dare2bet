<div class="page-wrapper" style="max-width: 400px; margin-top: 100px">
<div class=" container container-form align-middle  justify-content-center footer-bottom-margin w-100">
   <%= simple_form_for(@bet) do |f| %>
    <div class="text-center mt-4 mb-4">
      <h1 class="text-underline font-weight-bold"> Last step </h1>
    </div>
    <div class="mt-2 mb-5 ">
      <div class="progress">
        <div class="progress-bar bg-secondary progress-bar-striped progress-bar-animated" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>

    <%= f.input :privacy, collection: ["public", "private"] %>
    <%= f.association :tag %>

    <div class="text-center mt-5">
      <%= f.submit "Create the bet", class: "btn btn-violet" %>
    </div>
  <% end %>
</div>
</div>
