<%= image_tag "Dare2betpurple.gif", alt:"Dare Bet fancy logo", class:"logo"%>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs d-flex align-items-center flex-column">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Log in", class: "btn btn-dark btn-block" %>
  </div>
<% end %>



<%= render "devise/shared/links", class: "text-center" %>
